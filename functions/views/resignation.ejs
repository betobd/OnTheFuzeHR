        <div class="container">

            <!-- Form Name -->
            <legend class="mb-3 mt-3"><center><h2><b>Entrevista de Retiro</b></h2></center></legend><br>
                    
            <form class="row g-3 action="  method="post"  id="contact_form">
                
                <div class="col-md-6">
                  <label for="emp_name" class="form-label">Nombre</label>
                  <input type="text" name="name" class="form-control" id="emp_name" value="<%= name %>" readonly>
                </div>

                <div class="col-md-6">
                  <label for="emp_lastname" class="form-label">Apellido</label>
                  <input type="text" name="lastname" class="form-control" id="emp_lastname" value="<%= lastname %>" readonly>
                </div>

                <div class="col-md-4">
                  <label for="emp_id" class="form-label">Cedula</label>
                  <input type="text" name="id" class="form-control" id="emp_id" value="<%= id %>" readonly>
                </div>  
                
                <div class="col-md-4">
                    <label for="emp_post" class="form-label">Cargo</label>
                    <input type="text" name="post" class="form-control" id="emp_post" value="<%= post %>" readonly>
                  </div>

                  <div class="col-md-4">
                    <label for="emp_city" class="form-label">Ciudad</label>
                    <input type="text" name="city" class="form-control" id="emp_city" value="<%= city %>" readonly>
                  </div>
                
                <div class="col-12">
                  <label for="emp_address" class="form-label">Dirección</label>
                  <input type="text" name="address" class="form-control" id="emp_address" value="<%= address %>" readonly>
                </div>

                <div class="col-md-6">
                    <label for="emp_email" class="form-label">Correo</label>
                    <input type="text" name="email" class="form-control" id="emp_email" value="<%= email %>" readonly>
                  </div>

                  <div class="col-md-6">
                    <label for="emp_phone" class="form-label">Teléfono</label>
                    <input type="text" name="phone" class="form-control" id="emp_phone" value="<%= phone %>" readonly>
                  </div>

                <div class="col-md-6">
                    <label for="emp_start_date" class="form-label">Fecha Inicio</label>
                    <input type="date" name="start_date" class="form-control" id="emp_start_date" >
                  </div>

                  <div class="col-md-6">
                    <label for="emp_end_date" class="form-label">Fecha Retiro</label>
                    <input type="date" name="end_date" class="form-control" id="emp_end_date">
                  </div>
               
                <div class="col-12" id="resignation_options">
                  <label for="sel_motif" class="form-label">Motivo de retiro</label>
                  <select id="sel_motif" name="select_motif" class="form-select" aria-label="Default select example">
                    <option selected>Seleccionar motivo</option>
                    <option value="1">Oferta laboral</option>
                    <option value="2">Cuidado de familiar</option>
                    <option value="3">Viaje fuera del país</option>
                    <option value="4">Descontento laboral</option>
                    <option value="5">Despido sin justa causa</option>
                    <option value="6">Despido con justa causa</option>
                    <option value="7">Terminación de contrato por periodo de pruba</option>
                    <option value="8">Estudios</option>
                    <option value="9">Otro</option>
                  </select>
                </div>
                
                <div class="col-12">
                  <label for="emp_comments" class="form-label">Comentarios</label>
                  <div class="form-floating">
                    <textarea class="form-control" name="comments" placeholder="Leave a comment here" id="emp_comments" style="height: 100px"></textarea>
                    
                  </div>
                </div>
                                                        
                                                             

                 <!-- Button -->
                 <div class="form-group">
                    <label class="col-12"></label>
                    <div class="col-12">
                        <button type="submit" class="btn btn-warning">Guardar</button>
                      </div>
                </div>

              </form>

              <a href="#" id="add_more_fields">Add more</a>
                          

            
        </div><!-- /.container -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="/js/pdf.js"></script>
        

    </body>
</html>