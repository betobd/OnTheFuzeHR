<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Nuevo Documento</title>
        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"> 
        
        
    </head>
    <body>

        <header>
          <%- include('../views/templates/nav') %>
        </header>

        <div class="container">

            <form class="well form-horizontal" action=" " method="post"  id="contact_form">
                
                <fieldset>
                    
                    <!-- Form Name -->
                    <legend class="mt-2"><center><h2><b>New Document</b></h2></center></legend><br>
                    

                    <!-- Text input-->
                        
                    <div class="form-group">
                      <label class="col-md-4 control-label">Employee.</label>  
                      <div class="col-md-4 inputGroupContainer">
                          <div class="input-group">
                              <span class="input-group-addon"><i class="glyphicon glyphicon-text-size"></i></span>
                              <input id="employee_name" name="nombre_empleado" placeholder="Employee Name" class="form-control" type="text" value="<%= employee_name %>" readonly>
                          </div>
                      </div>
                  </div>
                   
                    <!-- Text input-->
                        
                    <div class="form-group">
                      <label class="col-md-4 control-label">C.C Empleado.</label>  
                      <div class="col-md-4 inputGroupContainer">
                          <div class="input-group">
                              <span class="input-group-addon"><i class="glyphicon glyphicon-text-size"></i></span>
                              <input id="employee_id_doc" name="cedula_empleado" placeholder="Employee ID" class="form-control" type="text" value="<%= doc_id %>"readonly>
                          </div>
                      </div>
                  </div>

                    <!-- Text input-->
                    
                    <div class="form-group">
                        <label class="col-md-4 control-label" >Categoría</label> 
                        <select id="category_selected" class="form-select col-12 col-lg-8" aria-label="Default select example" onchange="selectedCategory()">
                            <option value="1">ARL</option> 
                            <option value="2">Hoja de vida</option> 
                            <option value="3">Exámenes médicos</option>
                            <option value="4">SST</option> 
                            <option value="5">Incapacidades</option> 
                            <option value="6">Licencias</option> 
                            <option value="7">Vacaciones</option>
                            <option value="8">Recomendaciones Médicas</option>
                            <option value="9">EPS</option>
                            <option value="10">Caja de conpensación</option>
                            <option value="11">Certificados</option>
                            <option value="12">Otros</option>
                            <option value="13" selected="selected">Seleccione categoría</option>
                        </select>
                    </div>
                    
                    <!-- Text input-->
                    
                    <div class="form-group">
                        <label class="col-md-4 control-label">Descripcion del documento</label>  
                        <div class="col-12 col-lg-8 inputGroupContainer">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a comment here" id="file_description_area" style="height: 100px"></textarea>
                                <label for="floatingTextarea">Comentarios</label>
                            </div>
                        </div>
                    </div>
                    
                    
                    <!-- Text input-->
                        
                    <div class="form-group">
                        <label class="col-md-4 control-label">Archivo</label>  
                        <div class="col-12 col-lg-8 inputGroupContainer mb-3">                            
                            <input class="form-control" type="file" id="select_file_button">
                        </div>
                    </div>

                                    
                                        
                    
                </fieldset>
            </form>

            
        </div><!-- /.container -->

        <!-- Insert these scripts at the bottom of the HTML, but before you use any Firebase services -->

        <!-- Firebase App (the core Firebase SDK) is always required and must be listed first -->
        <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-app.js"></script>

        <!-- If you enabled Analytics in your project, add the Firebase SDK for Analytics -->
        <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-analytics.js"></script>

        <!-- Add Firebase products that you want to use -->
        <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-auth.js"></script>
        <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-firestore.js"></script>
        <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-storage.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
        <script src="/js/newDocument.js"></script>
    </body>
</html>