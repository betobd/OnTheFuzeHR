{
  "hosting": {
    
    "public": "functions/public",
    
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "redirects": [
      {
        "source": "/inicio",
        "destination": "mainpage.html",
        "type": 302
      }  
    ],

    "rewrites": [
      {
        "source": "/tabla",
        "function": "app"
      },
      {
        "source": "/pagina",
        "function": "app"
      },
      {
        "source": "/",
        "function": "app"
      },
      {
        "source": "/buscar",
        "function": "app"
      },
      {
        "source": "/editar",
        "function": "app"
      },
      {
        "source": "/crear",
        "function": "app"
      },
      {
        "source": "/inicio",
        "function": "app"
      },
      {
        "source": "/subirArchivo",
        "function": "app"
      },
      {
        "source": "/archivo",
        "function": "app"
      },
      {
        "source": "/resignation",
        "function": "app"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
  
}
